---
layout: base
title: Media
permalink: /media/
---

<div class="media-page">
  <h2>Media</h2>

  {% if collections.media.length > 0 %}
  <div class="post-list media-grid">
    {% for post in collections.media %}
    <article class="post-preview h-entry media-item">
      {% if post.data.photo %}
      <a href="{{ post.url | url }}">
        <img class="u-photo" src="{{ post.data.photo }}" alt="{{ post.data.photoAlt or post.data.title or 'Photo' }}" loading="lazy">
      </a>
      {% endif %}

      <time class="dt-published" datetime="{{ post.date | isoDate }}">
        {{ post.date | readableDate }}
      </time>

      {% if post.data.title %}
      <h3 class="post-title p-name">
        <a class="u-url" href="{{ post.url | url }}">{{ post.data.title }}</a>
      </h3>
      {% endif %}

      {% if post.data.tags %}
      <div class="post-tags">
        {% for tag in post.data.tags %}
        <span class="p-category tag">{{ tag }}</span>
        {% endfor %}
      </div>
      {% endif %}
    </article>
    {% endfor %}
  </div>
  {% else %}
  <p>No media posts yet.</p>
  {% endif %}
</div>
